<div class="pay-table">
  <table class="table table-bordered table-items">
    <caption id="pay-table-title">购物清单</caption>
    <thead>
      <tr>
        <th>名称</th>
        <th>单价(元)</th>
        <th>单位</th>
        <th>数量</th>
        <th>小计</th>
      </tr>
    </thead>
    <tbody>
      <!--example-->
      <tr>
        <td>COCO</td>
        <td>3</td>
        <td>听</td>
        <td>4</td>
        <td>12.00元</td>
      </tr>
    </tbody>
  </table>


  <table class="table table-bordered table-items">
    <caption id="pay-table-title">赠送商品</caption>
    <thead>
      <tr>
        <th>分类</th>
        <th>名称</th>
        <th>数量</th>
      </tr>
    </thead>
    <tbody>
      <!--example-->
      <tr>
        <td>买二送一</td>
        <td>COCO</td>
        <td>1</td>
      </tr>
    </tbody>
  </table>
  <div class="table-summary">
    <p id="summary">总计：9元</p>
    <p id="save">节约：3元</p>
    <button type="button" class="btn btn-primary btn-size">确认</button>
  </div>
</div>

