<%= erb :'layout/_nav' %>
<%= erb :'layout/_flash_page' %>

<div class="admin-add">
  <div class="admin-add-title"><p>商品管理<p></div>
  <form class="form-horizontal" role="form">
    <div class="form-group">
      <label for="item-name" class="col-sm-2 control-label">商品名称</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="item-name"
        placeholder="请输入商品名称">
      </div>
    </div>

    <div class="form-group">
      <label for="item-price" class="col-sm-2 control-label">商品单价</label>
       <div class="col-sm-10">
         <input type="text" class="form-control" id="item-price"
         placeholder="请输入商品单价">
       </div>
    </div>
    <div class="form-group">
      <label for="item-unit" class="col-sm-2 control-label">商品单位</label>
       <div class="col-sm-10">
         <input type="text" class="form-control" id="item-unit"
         placeholder="请输入商品单位">
       </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button id="submit" class="btn btn-primary">添加商品</button>
      </div>
    </div>
  </form>
</div>


<div class="product-table">
  <table class="table table-bordered table-items">
    <caption class="product-table-title">商品列表</caption>
    <thead>
      <tr>
        <th>名称</th>
        <th>单价(元)</th>
        <th>单位</th>
        <th>促销信息</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody id="product-table-list">
    </tbody>
  </table>
</div>

<% content_for :script_chunk do %>
  <link rel="stylesheet" href="/styles/admin.css">
  <script type="text/javascript" src="/scripts/model/item.js"></script>
  <script type="text/javascript" src="/scripts/model/promotion.js"></script>
  <script type="text/javascript" src="/scripts/model/shopping_cart.js"></script>
  <script type="text/javascript" src="/scripts/main.js"></script>
  <script type="text/javascript" src="/scripts/utils.js"></script>
  <script type="text/javascript" src="/scripts/add.js"></script>
  <script type="text/javascript" src="/scripts/admin_item_list.js"></script>
<% end %>
